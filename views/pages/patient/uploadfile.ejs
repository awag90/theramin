<div class="container py-4 px-4">
    <div class="row w-100">
    <div class="card shadow px-4 pt-2 col-12 pb-4 mx-0">
    <form action="/appointment/<%=appointment.id%>/uploadImage" method="post" enctype="multipart/form-data">
        <div>
            <h2 class="card-title px-2">Hier können Sie Dokumente für Ihren Termin hochladen</h2>
            <div class="form-group mb-3">            
                <input type="file" class="form-control" name="image">
            </div>
            <div class="form-group mb-3">
                <label class="col-form-label-lg">Name des Dokuments</label>
                <input type="text" class="form-control" name="documentName">
              </div>
        </div>
        <button type="submit" class="btn btn-primary">Speichern</button>
    </form>
    </div>
</div>
</div>
