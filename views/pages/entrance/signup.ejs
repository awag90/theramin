<div id="signup">
  <div class="container py-4 px-3">
    <div class=" card shadow border-none px-2 pt-2  ">
      <h1 class="text-center">Neuen Account registrieren</h1>
      <div class="container-fluid ">
        <p class="text-center">Erstellen Sie sich eine Account, dies dauerd nur eingie Minuten</p>
        <hr />
        <div id="app">
          <form action="/signup-patient" method="POST">
            <div class="row">
              <div class="form-group col-md-6 px-0">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" maxlength="50" minlength="0" name="name" placeholder="Name"
                  required />
              </div>
              <div class="form-group col-md-6 px-0 pl-md-4">
                <label class="form-label">Vorname</label>
                <input type="text" class="form-control" maxlength="50" minlength="0" name="firstname"
                  placeholder="Vorname" required />
              </div>
            </div>
            <div class="row px-0 ">
              <label class="form-label">Geburtstag</label>
              <input type="date" class="form-control" maxlength="50" minlength="0" name="dob" placeholder="01.01.1999"
                required />
            </div>
            <div class="row px-0 pt-2">
              <label class="form-label">E-Mail</label>
              <input type="email" class="form-control" maxlength="100" minlength="5"
                name="emailAddress" placeholder="email@adresse.de" required />
            </div>
            <div class="row px-0 pt-2">
              <label class="form-label">Initiales Passwort</label>
              <input v-model="password" @change="validate" type="password" class="form-control" minlength="8" maxlength="50"
                name="password" placeholder="••••••••" required />
            </div>
            <div class="row px-0 pt-2">
              <label for="confirm-password">Passwort bestätigen</label>
              <input v-model="confirm" @change="validate" :class="fieldclass" name="confirmPassword" type="password"
                maxlength="50" placeholder="••••••••" autocomplete="new-password" required>
            </div>
            <div class="row">
              <div class="form-check p-4">
                <input @change="validate" v-model="accepted" class="form-check-input" id="terms-agreement" name="termsAgreement" type="checkbox" required>
                <label for="terms-agreement" class="form-check-label">Ich habe die <a target="_blank" href="/terms"> Nutzungsbedingungen</a> gelesen &amp;
                  stimme zu.</label>
              </div>
            </div>
            <div class="row justify-content-center">
              <button type="submit" class="btn btn-primary mt-4 mb-4" :disabled="disabled">Account registrieren</button>
            </div>
          </form>
          <p class="text-center">Bestehender Account? <a href="/login">Einloggen</a></p>
        </div>
      </div>
    </div>
    <script>
      const app = Vue.createApp({
        data: function () {
          return {
            password: '',
            confirm: '',
            disabled: true,
            fieldclass: 'form-control',
            accepted: false, 
            passwordsMatch: false
          };
        },
        methods: {
          validate: function () {
            if (this.password == this.confirm) {
              this.passwordsMatch = true
              this.fieldclass = "form-control border-success border-2"
            } else {
              this.passwordsMatch = false
              this.fieldclass = "form-control border-danger border-2"
            }
            console.log(this.accepted)
            if (this.passwordsMatch && this.accepted){
              this.disabled = false
            }else{
              this.disabled = true
            }
          }
        },

      });
      app.mount("#app");
    </script>