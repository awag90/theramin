<div id="login">
  <div class="container py-4 px-3 ">
    <div class=" card shadow border-none px-2 pt-5  ">
      <div class="container-fluid">
        <h1 class="text-center">Loggen Sie sich ein</h1>
        <hr />
        <form action="/login" method="POST">
          <div class="form-group row px-0">
            <label class="form-label">Email Adresse</label>
            <input type="email" name="emailAddress" class="form-control" maxlength="100" minlength="0" placeholder="Email Adresse" autocomplete="email" focus-first required>

          </div>
          <div class="form-group row px-0">
            <lable class="form-label"> Passwort</lable>
            <input name="password" type="password" class="form-control" placeholder="Passwort" autocomplete="current-password" required>

          </div>
          <div class="form-group row px-0">
            <div class="form-group form-check">
              <input class="form-check-input" type="checkbox" id="remember" name="rememberMe" value="true" />
              <label class="form-check-label" for="remember">Anmeldedaten merken</label>
            </div>
          </div>
          <div class="row justify-content-center">
            <button type="submit" class="btn btn-primary mt-4 mb-4">Einloggen</button>
          </div>
        </form>
        <p class="text-center d-none"><a href="#">Passwort vergessen?</a></p>

      </div>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>