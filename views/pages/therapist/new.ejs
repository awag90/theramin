<div class="container p-4 px-3">
  <div class=" card shadow  px-4 pt-2">
  <form action="/therapist" method="post">
    <div>
      <input type="hidden" value="<%=practice.id%>" name="practice" />
      <div class="row">
        <div class="form-group col-md-6 px-0">
          <label class="form-label">Name</label>
          <input type="text" class="form-control" maxlength="50" minlength ="0" name="name" placeholder="Name" required/>
        </div>
        <div class="form-group col-md-6 px-0 pl-md-4">
          <label class="form-label">Vorname</label>
          <input type="text" class="form-control" maxlength="50" minlength ="0" name="firstname" placeholder="Vorname" required />
        </div>
      </div>
      <div class="row px-0">
        <label class="form-label">E-Mail</label>
        <input type="email" class="form-control" maxlength="100"  minlength ="0" name="emailAddress" placeholder="email@adresse.de" required/>
      </div>
      <div class="row px-0">
        <label class="form-label">Initiales Passwort</label>
        <input type="password" class="form-control" maxlength="100" name="password" placeholder="••••••••" required/>
      </div>
      <div class="row px-0">
        <label for="confirm-password">Passwort bestätigen</label>
        <input class="form-control" id="confirm-password" name="confirmPassword" type="password"  placeholder="••••••••" autocomplete="new-password">
      </div>
      <div class="row">
        <div class="formgroup">
          <label class="form-label">Fachgebiet</label>
          <select class="form-control" id="select" name="specialisation">
            <% specialisations.forEach(function(specialisation){ %>
            <option value="<%=specialisation.id%>">
              <%=specialisation.name%>
            </option>
            <%});%>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="form-check p-4">
          <%if(req.me){%>
            <input type="checkbox" value="true" class="form-check-input" name="isAdmin" id="checkAdmin"/>
          <%}else{%>
            <input type="checkbox" value="true" class="form-check-input" name="isAdmin" id="checkAdmin" checked disabled/>
          <%}%>
          <label class="form-check-label" for="checkAdmin">Ist Praxis-Administrator</label>
        </div>
      </div>
      <div class="row justify-content-center">
        <button type="submit" class="btn btn-primary mt-4 mb-4">Hinzufügen</button>
      </div>
    </div>
  </form>
</div>
</div>

