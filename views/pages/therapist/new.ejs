<div class="container p-4">
    <form action="/therapist" method="post">
        <div>
            <input type="hidden" value="<%=practice.id%>" name="practice">

            <div class="row">
                <div class="form-group col-md-6 px-0">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" maxlength="50" name="name" />
                </div>
                <div class="form-group col-md-6 px-0 pl-md-4">
                    <label class="form-label">Vorname</label>
                    <input type="text" class="form-control" maxlength="50" name="firstname" />
                </div>
            </div>
                <div>
                    <form action="/worktime" method="post">
                    <table>
                        <tr>
                            <th></th>
                            <th>Montag</th>
                            <th>Dienstag</th>
                            <th>Mittwoch</th>
                            <th>Donnerstag</th>
                            <th>Freitag</th>
                        </tr>
                        <tr>
                            <td>Von</td>
                            <td><input type="time" name="MondayF"></td>
                            <td><input type="time" name="TuesdayF"></td>
                            <td><input type="time" name="WednesdayF"></td>
                            <td><input type="time" name="ThursdayF"></td>
                            <td><input type="time" name="FridayF"></td>
                        </tr>
                        <tr>
                            <td>Bis</td>
                            <td><input type="time" name="MondayT"></td>
                            <td><input type="time" name="TuesdayT"></td>
                            <td><input type="time" name="WednesdayT"></td>
                            <td><input type="time" name="ThursdayT"></td>
                            <td><input type="time" name="FridayT"></td>
                        </tr>
                    </table>
                </form>
                
                    </div> 
            <div class ="row">
                <div class="formgroup">
                    <label class="form-label">Fachgebiet</label>
                    <select class="form-control" id="select" name="specialisation">
                        <% specialisations.forEach(function(specialisation){ %>
                            <option value="<%=specialisation.id%>"><%=specialisation.name%></option>
                        <%});%>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="form-check p-4">
                    <input type="checkbox" value="true" class="form-check-input" name="isAdmin" id="checkAdmin" />
                    <label class="form-check-label" for="checkAdmin">Ist Praxis-Administrator</label>
                </div>
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-primary mt-4 mb-4">Hinzuf√ºgen</button>
            </div>
    </form>
</div>
