<div class="container pt-4">
    <form action="/practice/<%=practice.id%>/update" method="post">
        <div>
            <div class="form-group  row px-2">
                <label class="form-label">Praxis-Name</label>
                <input type="text" class="form-control" maxlength="50" name="name" value="<%=practice.name%>" required/>
            </div>
            <div class="row">
                <div class="form-group col-md-8 px-2">
                    <label class="form-label">Stra√üe</label>
                    <input type="text" class="form-control" maxlength="50" name="street" value="<%=practice.street%>" required/>
                </div>
                <div class="form-group col-md-4 px-2 pl-md-4">
                    <label class="form-label">Hausnummer</label>
                    <input type="text" class="form-control" maxlength="10" name="streetnumber" value="<%=practice.streetnumber%>"  required/>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6 px-2">
                    <label class="form-label">PLZ</label>
                    <input type="text" class="form-control" maxlength="10" name="zip" value="<%=practice.zip%>"  required/>
                </div>
                <div class="form-group col-md-6 px-2 pl-md-4">
                    <label class="form-label">Ort</label>
                    <input type="text" class="form-control" maxlength="50" name="city" value="<%=practice.city%>" required/>
                </div>
            </div>
            <div class="row">
                <div class="form-group  px-2 w-100">
                    <label class="form-label">Beschreibung</label>
                    <textarea class="form-control" id="descriptionEdit" rows="5" name="description"><%=practice.description%></textarea>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <button type="submit" class="btn btn-primary mt-4 mb-4">Anpassen</button>
        </div>
    </form>
</div>