<div class="container">
    <form action="/practice" method="post">
        <div>
            <div class="form-group">
                <label class="col-form-label-lg">Name</label>
                <input type="text" class="form-control" maxlength="50" name="name">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Straße</label>
                <input type="text" class="form-control" maxlength="50" name="street">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Hausnummer</label>
                <input type="text" class="form-control" maxlength="10" name="streetnumber">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">PLZ</label>
                <input type="text" class="form-control" maxlength="10" name="zip">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Ort</label>
                <input type="text" class="form-control" maxlength="50" name="city">
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Hinzufügen</button>
    </form>
</div>